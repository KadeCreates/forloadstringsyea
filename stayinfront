-- Simple Follow Script - 15 Studs in Front
local TARGET_USERNAME = "cryingprada" -- CHANGE THIS

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

while true do
    local target = Players:FindFirstChild(TARGET_USERNAME)
    
    if target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
        local localChar = Players.LocalPlayer.Character
        
        if localChar and localChar:FindFirstChild("HumanoidRootPart") then
            local targetRoot = target.Character.HumanoidRootPart
            local localRoot = localChar.HumanoidRootPart
            
            -- Teleport 15 studs in front
            localRoot.CFrame = targetRoot.CFrame * CFrame.new(0, 0, -15)
        end
    end
    
    task.wait(0.1)
end
